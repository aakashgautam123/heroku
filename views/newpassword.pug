html
    head
        title New Password  
        style(type='text/css').
            *{
                margin:0px;
                padding:0px;
            }
            .spacer{
                margin-bottom:20px;
            }
           input{
               width:300px;
            padding: 20px;
               position:relative;
               border:2px solid #e1e1e1;
               border-radius:4px;
           }
           input::placeholder{
               color:silver;
               position:relative;
               left:20px;
           }
           .containerform{
               width:70%;
               margin:30px auto;
               box-shadow:0px 10px 40px rgba(0,0,0,0.2);

           }
           .containerform h2{
               color: white;
               background: #79a6c7;
               padding: 40px;
               font-weight: bold;
               font-size: 40px;
                
           }
           label{
              
               font-weight:bold;
               font-size:20px;
           }
           .info{
               text-align:left;
               color:silver;
           }
           input[type='submit']
           {
               background-color:#79a6c7;
               border-radius:4px;
               color:white;
               border:1px solid #79a6c7;
               font-size:20px;
               margin-bottom:10px;
           }

            .ctr {
                padding: 20px 40px;
            }
            
            #message {
                color: #a1a1a1;
                font-family: "helvetica";
                padding-left: 10px;
                border-left: 2px solid #79a6c7;
            }
           
        

                
                
            
        link(rel="stylesheet" ,href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    body
        div(class='containerform')
            form(action="/updatepassword",method="POST")
                h2(class='title') RESET YOUR PASSWORD

                div(class='ctr')
                    div(class='info')
                        label(for="resetcode") RESET CODE

                    input(type="text",name='resetcode',placeholder='Enter Reset Code',class=' spacer' ,id="resetcode")
                    div(class='info')
                        label(for="resetcode") EMAIL
                    
                    input(type="email",name='email',placeholder='Your Email',class=' spacer')
                    div(class='info')
                        label(for="resetcode") NEW PASSWORD
                    
                    input(type="password" ,name="newpassword" ,placeholder='New Password',class=' spacer',id='npass')
                    div(class='info')
                        label(for="resetcode") CONFIRM PASSWORD
                    
                    div(style="display: flex;justify-content: space-between")
                        div
                            input(type="password",name="confirmpassword",placeholder='Confirm Password',class=' spacer',id='cpass')
                            div(id='message') Password not matched
                        div
                            input(type="submit",name='submit',value='Change Password')

        script(src='scripts/newpassword.js')